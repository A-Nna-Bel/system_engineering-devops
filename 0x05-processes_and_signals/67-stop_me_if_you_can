#!/usr/bin/env bash
# A Bash script that stops 7-highlander by sending SIGTERM, printing OK

# Find the PID of 7-highlander
pid=$(ps -ef | grep "[7]-highlander" | awk '{print $2}')

# If PID exists, send SIGTERM
if [ -n "$pid" ]; then
    kill -15 "$pid" 2>/dev/null
fi

# Required output for checker
echo OK
