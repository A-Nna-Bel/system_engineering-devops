#!/usr/bin/env bash
# 67-stop_me_if_you_can
# Send SIGTERM to a running 7-highlander script (first match).

# Find the PID of the running 7-highlander script (match by command line)
pid=$(pgrep -f "7-highlander" | head -n 1)

# If no PID found, exit quietly
[ -z "$pid" ] && exit 0

# Send SIGTERM
kill -TERM "$pid" 2>/dev/null || true
