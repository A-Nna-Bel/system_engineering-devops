#!/usr/bin/env bash
# Trap SIGTERM signal and print message instead of terminating
# Use SIG_IGN to ignore the signal after printing
trap 'echo "I am invincible!!!"' SIGTERM

# Also trap SIGINT (Ctrl+C) to handle it gracefully
trap 'echo "I am invincible!!!"' SIGINT

# Infinite loop with the required message
while true
do
    echo "To infinity and beyond"
    sleep 2
done
